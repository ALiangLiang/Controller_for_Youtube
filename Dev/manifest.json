{
	"name": "Controller for Youtubeâ„¢",
	"description": "It's easy to control the youtube media player with keyboard.",
	"version": "1.0.0",
	"background": {
		"scripts": [  "background.js" ]
	},
	"content_scripts": [ {
			"js": [  "receiver.js" ],
			"matches": [ "*://*/*" ]
		}, {
			"js": [  "controller.js" ],
			"matches": [ "*://www.youtube.com/*" ],
			"run_at": "document_end"
		}],
	"options_page": "option.html",
	"icons": {
		"128": "icon/icon128.png",
		"16": "icon/icon16.png",
		"19": "icon/icon19.png",
		"48": "icon/icon48.png"
	},
	"permissions": [
		"tabs", "*://*/*", "nativeMessaging"
	],
	"manifest_version": 2,
	"update_url": "https://clients2.google.com/service/update2/crx",
"app": {
"launch": {
"local_path": "main.html"
}
},
	"content_security_policy": "script-src 'self' https://www.google.com https://checkout.google.com; object-src 'self'"
}
